@model List<Vidly.Models.Film>

@{ ViewBag.Title = "Films";
                Layout = "~/Views/Shared/_Layout.cshtml"; }

<h2>Movies</h2>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Film</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var film in Model)
        {
<tr>
    <td>@film.Name</td>
</tr>}
    </tbody>
</table>